<HomeScreen>:
	name: 'home_screen'
	Widget:
		canvas:
			Color:
				rgba: rgba('#E1E1E1')
			Rectangle:
				size: self.size
				pos: self.pos

    FloatLayout:
		pos_hint: {'center_y': 0.55, 'center_x': 0.24}
		size_hint: 0.385, 0.60
		canvas:
			Color:
				rgba: rgba('#FFFFFF')
			RoundedRectangle:
                radius: [40,40,40,40]
				size: self.size
				pos: self.pos

		MDIcon:
			icon: 'video'
			font_size: '25dp'
			theme_text_color: 'Custom'
			text_color: rgba('#2e593b')
			pos_hint: {'center_x': 0.08, 'center_y' : 0.85}

		MDLabel:
			text: ('[font=Fonts/Roboto-Black] Live Feed[/font]')
			font_size: '20dp'
			markup: True
			halign: "left"
			theme_text_color: 'Custom'
			text_color: rgba('#2e593b')
			pos_hint: {'center_x': 0.62, 'center_y' : 0.85}

	MDRoundFlatIconButton:
		text: '  Capture Image    '
		halign: "center"
		theme_text_color: 'Custom'
		text_color: rgba('#FFFFFF')
		md_bg_color: rgba('#2e593b')
		line_color: rgba('#2e593b')
		pos_hint: {'center_x': 0.23, 'center_y' : 0.16}

    FloatLayout:
		pos_hint: {'center_y': 0.73, 'center_x': 0.70}
		size_hint: 0.50, 0.43
		canvas:
			Color:
				rgba: rgba('#FFFFFF')
			RoundedRectangle:
                radius: [40,40,40,40]
				size: self.size
				pos: self.pos

		MDIcon:
			icon: 'leaf'
			font_size: '25dp'
			theme_text_color: 'Custom'
			text_color: rgba('#2e593b')
			pos_hint: {'center_x': 0.08, 'center_y' : 0.8}

		MDLabel:
			text: ('[font=Fonts/Roboto-Black]Plant Status[/font]')
			font_size: '20dp'
			markup: True
			halign: "left"
			theme_text_color: 'Custom'
			text_color: rgba('#2e593b')
			pos_hint: {'center_x': 0.62, 'center_y' : 0.8}

		FloatLayout:
			pos_hint: {'center_y': 0.45, 'center_x': 0.5}
			size_hint: 0.80, 0.38
			canvas:
				Color:
					rgba:
						(rgba('#2e593b') if root.plant_status_color == 1 \
						else rgba('#BC5448') if root.plant_status_color == 2 else (0,0,0,0))
				RoundedRectangle:
					radius: [30,30,30,30]
					size: self.size
					pos: self.pos
			MDLabel:
				text: ('[font=Fonts/Roboto-Black]' + root.plant_status + '[/font]')
				font_size: '20dp'
				markup: True
				halign: "center"
				theme_text_color: 'Custom'
				text_color: rgba('#FFFFFF')
				pos_hint: {'center_x': 0.5, 'center_y' : 0.5}

		MDLabel:
			text: '[font=Fonts/Roboto-MediumItalic]' + root.time_date + '[/font]'
			font_size: '13dp'
			markup: True
			halign: "center"
			theme_text_color: 'Custom'
			text_color: rgba('#2e593b')
			pos_hint: {'center_x': 0.5, 'center_y' : 0.16}

    FloatLayout:
		pos_hint: {'center_y': 0.27, 'center_x': 0.70}
		size_hint: 0.50, 0.43
		canvas:
			Color:
				rgba: rgba('#FFFFFF')
			RoundedRectangle:
                radius: [40,40,40,40]
				size: self.size
				pos: self.pos

		MDIcon:
			icon: 'security'
			font_size: '25dp'
			theme_text_color: 'Custom'
			text_color: rgba('#2e593b')
			pos_hint: {'center_x': 0.08, 'center_y' : 0.8}

		MDLabel:
			text: ('[font=Fonts/Roboto-Black] Security Status[/font]')
			font_size: '20dp'
			markup: True
			halign: "left"
			theme_text_color: 'Custom'
			text_color: rgba('#2e593b')
			pos_hint: {'center_x': 0.61, 'center_y' : 0.8}

		FloatLayout:
			pos_hint: {'center_y': 0.45, 'center_x': 0.5}
			size_hint: 0.80, 0.38
			canvas:
				Color:
					rgba:
						(rgba('#2e593b') if root.security_status_color == 1 \
						else rgba('#BC5448') if root.security_status_color == 2 else (0,0,0,0))
				RoundedRectangle:
					radius: [30,30,30,30]
					size: self.size
					pos: self.pos
			MDLabel:
				text: ('[font=Fonts/Roboto-Black]' + root.security_status + '[/font]')
				font_size: '20dp'
				markup: True
				halign: "center"
				theme_text_color: 'Custom'
				text_color: rgba('#FFFFFF')
				pos_hint: {'center_x': 0.5, 'center_y' : 0.5}

		MDLabel:
			text: ('[font=Fonts/Roboto-MediumItalic]Motion Detected: No     Tripwire Interrupted: No[/font]')
			font_size: '13dp'
			markup: True
			halign: "center"
			theme_text_color: 'Custom'
			text_color: rgba('#2e593b')
			pos_hint: {'center_x': 0.5, 'center_y' : 0.16}
