# form the design and layout of the hamburger menu
<NavLayoutScreen>:
    MDNavigationLayout:
        id: navigation_layout
        ScreenManager:
            Screen:
                BoxLayout:
                    orientation: 'vertical'

                    MDTopAppBar:
                        id: toolbar
                        title: 'Plant Monitoring'
                        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                        right_action_items: [["camera-timer", lambda x: root.plant_capture_timer()],]
                        theme_text_color: 'Custom'
                        md_bg_color: rgba('#2e593b')
                        specific_text_color: rgba('#FFFFFF')
                        elevation:5

                    ScreenManager:
                        id: manage

                        HomeScreen:
                            name: 'home_screen'

                        AboutScreen:
                            name: 'about_app'

                        HelpScreen:
                            name: 'help'

        MDNavigationDrawer:
            id: nav_drawer

            canvas:
                Color:
                    rgba: rgba('#FFFFFF')
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                orientation: 'vertical'
                padding: "8dp"
                spacing: "8dp"
                # Image:
                #     size_hint_y: .3
                #     source: "Media/QR_Attendance_Logo.png"
                ScrollView:
                    MDList:
                        OneLineIconListItem:
                            text: "Home"
                            theme_text_color: 'Custom'
                            text_color: rgba('#2e593b')
                            on_release:
                                app.show_screen("home_screen")
                                nav_drawer.set_state("close")
                            IconLeftWidget:
                                icon: "home"
                                theme_text_color: 'Custom'
                                text_color: rgba('#2e593b')
                                on_release:
                                    app.show_screen("home_screen")
                                    nav_drawer.set_state("close")
                        OneLineIconListItem:
                            text: "About the App"
                            theme_text_color: 'Custom'
                            text_color: rgba('#2e593b')
                            on_release:
                                app.show_screen("about_app")
                                nav_drawer.set_state("close")
                            IconLeftWidget:
                                icon: "leaf"
                                theme_text_color: 'Custom'
                                text_color: rgba('#2e593b')
                                on_release:
                                    app.show_screen("about_app")
                                    nav_drawer.set_state("close")
                        OneLineIconListItem:
                            text: "Help"
                            theme_text_color: 'Custom'
                            text_color: rgba('#2e593b')
                            on_release:
                                app.show_screen("help")
                                nav_drawer.set_state("close")
                            IconLeftWidget:
                                icon: "help-box"
                                theme_text_color: 'Custom'
                                text_color: rgba('#2e593b')
                                on_release:
                                    app.show_screen("help")
                                    nav_drawer.set_state("close")
